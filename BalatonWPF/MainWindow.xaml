<Window x:Class="BalatonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalatonWPF"
        mc:Ignorable="d"
        Title="BalatonWPF" Height="500" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- DataGrid a telkek megjelenítésére -->
        <DataGrid x:Name="telkekDataGrid" 
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Adoszam" Binding="{Binding TelekAdoSzam}" Width="80"/>
                <DataGridTextColumn Header="Utca" Binding="{Binding UtcaNeve}" Width="*"/>
                <DataGridTextColumn Header="Hazszam" Binding="{Binding Hazszam}" Width="80"/>
                <DataGridTextColumn Header="Kategoria" Binding="{Binding Adosav}" Width="80"/>
                <DataGridTextColumn Header="Terulet" Binding="{Binding Terulet}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <ComboBox x:Name="adoSavComboBox" 
                      Height="30" 
                      Margin="10"
                      FontSize="14">
                <ComboBoxItem Content="A" IsSelected="True"/>
                <ComboBoxItem Content="B"/>
                <ComboBoxItem Content="C"/>
            </ComboBox>

            <Button x:Name="modositButton" 
                    Content="Módosít" 
                    Height="40" 
                    Margin="10,30,10,10"
                    Click="ModositButton_Click"/>

            <Button x:Name="mentesButton" 
                    Content="Mentés" 
                    Height="40" 
                    Margin="10,10,10,10"
                    Click="MentesButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
